<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>bank</servlet-name>
        <servlet-class>controller.bank.Bank</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createcustomer</servlet-name>
        <servlet-class>controller.bank.CreateCustomer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deposit</servlet-name>
        <servlet-class>controller.bank.Deposit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Atm</servlet-name>
        <servlet-class>controller.atm.Atm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AtmTransaction</servlet-name>
        <servlet-class>controller.atm.AtmTransaction</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AtmCheckBalance</servlet-name>
        <servlet-class>controller.atm.AtmCheckBalance</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AtmWithdraw</servlet-name>
        <servlet-class>controller.atm.AtmWithdraw</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AtmWithdrawInput</servlet-name>
        <servlet-class>controller.atm.AtmWithdrawInput</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AtmWithdrawConfirm</servlet-name>
        <servlet-class>controller.atm.AtmWithdrawConfirm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AtmWithdrawInvalid</servlet-name>
        <servlet-class>controller.atm.AtmWithdrawInvalid</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AtmWithdrawValid</servlet-name>
        <servlet-class>controller.atm.AtmWithdrawValid</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AtmLogout</servlet-name>
        <servlet-class>controller.atm.AtmLogout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateUser</servlet-name>
        <servlet-class>controller.bank.CreateUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>common.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bank</servlet-name>
        <url-pattern>/bank</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createcustomer</servlet-name>
        <url-pattern>/bank/createcustomer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deposit</servlet-name>
        <url-pattern>/bank/deposit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Atm</servlet-name>
        <url-pattern>/atm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AtmTransaction</servlet-name>
        <url-pattern>/atm/transaction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AtmCheckBalance</servlet-name>
        <url-pattern>/atm/checkbalance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AtmWithdraw</servlet-name>
        <url-pattern>/atm/withdraw</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AtmWithdrawInput</servlet-name>
        <url-pattern>/atm_withdraw_input</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AtmWithdrawConfirm</servlet-name>
        <url-pattern>/atm_withdraw_confirm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AtmWithdrawInvalid</servlet-name>
        <url-pattern>/atm_withdraw_invalid</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AtmWithdrawValid</servlet-name>
        <url-pattern>/atm_withdraw_valid</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AtmLogout</servlet-name>
        <url-pattern>/atm/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateUser</servlet-name>
        <url-pattern>/bank/createuser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>/WEB-INF/view/login/login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
