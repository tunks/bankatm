<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="model.classes.UserRole" table="user_roles">
  <meta attribute="class-description">
	  This class contains the user role details.
	</meta>
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="userId" type="int" column="user_id" not-null="true"/>
        <property name="role" type="string" column="role" not-null="true"/>
    </class>
</hibernate-mapping>
